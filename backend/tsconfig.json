{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "commonjs",                            
    "rootDir": "./src",                              
    "outDir": "./dist",                              
    "strict": true,                                  
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "skipLibCheck": true,                            
    "resolveJsonModule": true,                       
    "baseUrl": "./src",                              
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                 
    "declaration": true,                             
    "declarationMap": true,                          
    "sourceMap": true,                               
    "allowSyntheticDefaultImports": true,           
    "noImplicitAny": false,                         
    "experimentalDecorators": true,                 
    "emitDecoratorMetadata": true                   
  },
  "include": [
  "src/**/*.ts",
  "src/@types/**/*.d.ts"
],                        
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
